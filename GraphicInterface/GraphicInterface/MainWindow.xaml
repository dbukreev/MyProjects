<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
					 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
					 xmlns:Custom="http://schemas.microsoft.com/winfx/2006/xaml/presentation/ribbon" 
					 x:Class="GraphicInterface.MainWindow"
					Title="GraphMaster" Height="350" Width="525" Icon ="Image/Icon.ico">
	<Grid>
		<Custom:Ribbon HorizontalAlignment="Stretch" VerticalAlignment="Top" Background="#FF1D1B1B" BorderBrush="#FF2F3C49" >
			<Custom:Ribbon.ApplicationMenu>
				<Custom:RibbonApplicationMenu Width="58" Height="24" Background="#FFAA1F1F" KeyTip="M" Label="File" BorderBrush="#FFF33672" >
					<Custom:RibbonApplicationMenuItem Header="Exit" ImageSource="Image/Exit.png" Click="MenuItem_OnClick"/>
				</Custom:RibbonApplicationMenu>
			</Custom:Ribbon.ApplicationMenu>
			<Custom:RibbonTab Header="Tab"/>
			<Custom:RibbonTab Header="Tab2"/>
		</Custom:Ribbon>
		<StatusBar Name="StatusBarMain" Height="30" HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
			<StatusBarItem HorizontalContentAlignment="Left" Width="161">
				<TextBlock x:Name="TextBlockStatus" Margin="5,0,0,0" Width="90" />
			</StatusBarItem>
			<StatusBarItem HorizontalContentAlignment="Stretch" Width="163">
				<ProgressBar x:Name="ProgressBarMain" Height="15" Width="75" />
			</StatusBarItem>
			<StatusBarItem HorizontalContentAlignment="Right">
			</StatusBarItem>
		</StatusBar>


	</Grid>
</Window>
